<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Inclure les préférences partagées -->
        <include domain="sharedpref" path="."/>
        
        <!-- Inclure les fichiers dans le dossier files/ -->
        <include domain="file" path="."/>
        
        <!-- Inclure la base de données -->
        <include domain="database" path="."/>
        
        <!-- Configuration pour FlutterSecureStorage -->
        <include domain="sharedpref" path="FlutterSecureStorage/"/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Inclure les mêmes règles que pour la sauvegarde cloud -->
        <include domain="sharedpref" path="."/>
        <include domain="file" path="."/>
        <include domain="database" path="."/>
        
        <!-- Configuration pour FlutterSecureStorage -->
        <include domain="sharedpref" path="FlutterSecureStorage/"/>
    </device-transfer>
</data-extraction-rules>
